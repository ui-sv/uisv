{
	"name": "uisv",
	"version": "0.0.8",
	"description": "ui library for the rest of us",
	"license": "MIT",
	"repository": "ui-sv/uisv",
	"homepage": "https://uisv.pages.dev",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && bun prepack",
		"preview": "vite preview",
		"prepare": "bun svelte-kit sync || echo ''",
		"prepack": "bun svelte-kit sync && bun svelte-package && bun publint",
		"check": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun svelte-kit sync && bun svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"svelte": "./dist/vite.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@iconify-json/logos": "^1.2.10",
		"@iconify-json/lucide": "^1.2.82",
		"@iconify-json/solar": "^1.2.5",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.3",
		"@unocss/preset-web-fonts": "^66.5.11",
		"@unocss/reset": "^66.5.11",
		"@vitest/browser": "^4.0.16",
		"bits-ui": "^2.14.4",
		"defu": "^6.1.4",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"mdsvex": "^0.12.6",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"publint": "^0.3.16",
		"scule": "^1.3.0",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"theme-colors": "^0.1.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"unocss": "^66.5.11",
		"unplugin-icons": "^22.5.0",
		"vite": "^7.3.0",
		"vitest": "^4.0.16",
		"vitest-browser-svelte": "^2.0.1"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
